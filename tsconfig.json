{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build/package",
    "emitDeclarationOnly": true,
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["**/*.stories.*", "**/*.spec.*", "**/*.test.*"]
}
