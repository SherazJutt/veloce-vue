{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "build/package",
    "outDir": "build/package",
    "noEmit": false,
    "noEmitOnError": false,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "preserve",
    "types": ["vue", "vite/client"],
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },

    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": [
    "vite.config.ts",
    "**/*.stories.*",
    "**/*.spec.*",
    "**/*.test.*",
    "node_modules",
    "dist",
    "build"
  ]
}
