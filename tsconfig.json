{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		/* === Output Settings === */
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "build/package",
		"outDir": "build/package",
		"noEmit": false,
		"noEmitOnError": false,

		/* === Module Resolution === */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"jsx": "preserve",

		/* === Type Resolution === */
		"types": ["vue", "vite/client"],
		"baseUrl": ".",
		"rootDir": "src",
		"paths": {
			"@/*": ["src/*"]
		},

		/* === Build & Compatibility === */
		"composite": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		/* === Linting & Strictness === */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},

	/* === File Inclusion === */
	"include": ["src/**/*.ts", "src/**/*.vue"],

	/* === File Exclusion === */
	"exclude": ["vite.config.ts", "**/*.stories.*", "**/*.spec.*", "**/*.test.*", "node_modules", "dist", "build"]
}
