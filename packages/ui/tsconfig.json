{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    /* === Output Settings === */
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../../build/package",
    "outDir": "./dist",
    "noEmit": false,
    "noEmitOnError": false,

    /* === Module Resolution === */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "preserve",

    /* === Type Resolution === */
    "types": ["vue", "vite/client"],
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@types/*": ["./src/types/*"]
    },

    /* === Build & Compatibility === */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* === Linting & Strictness === */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },

  /* === File Inclusion === */
  "include": ["src/exports/ui.ts"],

  /* === File Exclusion === */
  "exclude": []
}
